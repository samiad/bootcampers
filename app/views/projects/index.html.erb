<div class="container">
  <h1 class="projects-title">Projets en cours</h1>
  <% @projects.each do |project| %>
    <%= render "projects/status/#{project.status[:slug]}", project: project %>
  <% end %>
</div>

<div class="modal fade" id="project-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

    </div>
  </div>
</div>
<%= content_for :after_js do %>
  <script type="text/javascript">
    $('body').on('hidden.bs.modal', '.modal', function() {
      $(this).removeData('bs.modal');
    });
  </script>
<% end %>