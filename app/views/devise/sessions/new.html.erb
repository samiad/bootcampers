<div class="content-form">
  <!-- formulaire -->
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <h2>Connexion</h2>
        <h3><% if company? %> company <% else %> bootcamper <% end %></h3>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Connexion" %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  <!-- fin du formulaire -->
  <div class="content-form-footer">
    <% if company? %>
      Vous êtes un bootcamper ? <%= link_to "Connectez-vous", new_user_session_path(as: :bootcamper) %>
    <% else %>
      Vous êtes une entreprise ? <%= link_to "Connectez-vous", new_user_session_path(as: :client) %>
    <% end %>
  </div>
</div>
