<div class="content-form">
  <!-- logo clickable -->
  <%= link_to root_path, class: "form-logo" do %>
    <%= image_tag "blue-logo.png", class: "logo" %>
  <% end %>
  <!-- formulaire -->
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <div class="form">

        <% if client? %>
          <img src="http://bit.ly/2Ac18dT" alt="">
          <h4>Espace Entreprise</h4>
        <% else %>
          <img src="http://bit.ly/2zHjhkx" alt="">
          <h4>Espace Bootcamper</h4>
        <% end %>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, placeholder: "Email", required: false, autofocus: false, label: false %>
          <%= f.input :password, placeholder: "Mot de passe", required: false, label: false %>
          <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Connexion", class: "btn-publish" %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
  <!-- fin du formulaire -->
  <div class="content-form-footer">
    <% if client? %>
      Vous êtes un bootcamper ? <%= link_to "Connectez-vous", new_user_session_path(as: :bootcamper) %>
    <% else %>
      Vous êtes une entreprise ? <%= link_to "Connectez-vous", new_user_session_path(as: :client) %>
    <% end %>
  </div>
</div>
