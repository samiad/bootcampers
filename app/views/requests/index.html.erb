    <div class="items company"><%= request.company.name %></div>
    <div class="items request_title"><%= request.request_title %></div>
    <div class="items description"><%= request.request_description %></div>
    <div class="items budget"><%= request.budget %>â‚¬</div>
    <div class="items">A livrer le <%= request.request_delivery_at.strftime("%d %m %Y") %></div>
